@model BibliotecaCulturalItla.Domain.Entities.Book
@{
    ViewData["Title"] = "Eliminar Libro";
}
<h2>Eliminar</h2>
<p>¿Seguro que quieres eliminar este libro?</p>

<ul>
    <li><strong>Título:</strong> @Model.Title</li>
    <li><strong>Género:</strong> @Model.Genre</li>
    <li><strong>Año:</strong> @Model.YearPublished</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
