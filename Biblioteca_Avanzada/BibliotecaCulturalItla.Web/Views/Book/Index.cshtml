@model IEnumerable<BibliotecaCulturalItla.Domain.Entities.Book>

@{
    ViewData["Title"] = "Listado de Libros";
}

<h2>Listado de Libros</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Agregar Libro</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Año</th>
            <th>Género</th>
            <th>Disponible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.YearPublished</td>
                <td>@book.Genre</td>
                <td>@(book.Available ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@book.BookId">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

