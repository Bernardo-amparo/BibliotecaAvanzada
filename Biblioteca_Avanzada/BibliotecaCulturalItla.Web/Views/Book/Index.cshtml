@model IEnumerable<BibliotecaCulturalItla.Domain.Entities.Book>
@{
    ViewData["Title"] = "Listado de Libros";
}
<h2>Listado de Libros</h2>
<p><a class="btn btn-primary" asp-action="Create">Agregar Libro</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Año</th>
            <th>Género</th>
            <th>Disponible</th>
            <th style="width: 220px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.YearPublished</td>
                <td>@book.Genre</td>
                <td>@(book.Available ? "Sí" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@book.BookId">Ver</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@book.BookId">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@book.BookId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

